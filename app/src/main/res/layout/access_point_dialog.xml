<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/access_point_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hotspot_dialog_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/doNotAskCheckbox"
        android:padding="10dp"
        />
    <CheckBox
        android:id="@+id/doNotAskCheckbox"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/access_point_message"
        app:layout_constraintEnd_toStartOf="@id/doNotAskLabel"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/doNotAskLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/do_not_ask_again"
        app:layout_constraintStart_toEndOf="@id/doNotAskCheckbox"
        app:layout_constraintTop_toBottomOf="@id/access_point_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>