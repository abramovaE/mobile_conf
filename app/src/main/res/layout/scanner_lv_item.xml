<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20px"
    android:id="@+id/scanner_lv">
            <TextView
                android:id="@+id/scanner_lv_item_ssid"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/scanner_lv_item0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/update_content_lv_item"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/scanner_lv_item0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/scanner_lv_item_ssid"
                app:layout_constraintEnd_toStartOf="@id/scanner_lv_item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/update_content_lv_item"
                android:layout_weight="3"
                android:paddingLeft="15px"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/scanner_lv_item1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/scanner_lv_item0"
                app:layout_constraintEnd_toStartOf="@id/scanner_lv_item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/update_content_lv_item"
                android:layout_weight="2"
                android:paddingLeft="15px"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/scanner_lv_item2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/scanner_lv_item1"
                app:layout_constraintEnd_toStartOf="@id/scanner_lv_exp_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/update_content_lv_item"
                android:layout_weight="2"
                android:paddingLeft="15px"
                android:visibility="gone"/>
            <Button
                android:id="@+id/scanner_lv_exp_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/scanner_lv_item2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="@dimen/update_content_lv_item"
                android:padding="15px"
                android:visibility="gone"/>
        <TextView
            android:id="@+id/scanner_lv_item_txt_exp"
            app:layout_constraintTop_toBottomOf="@id/scanner_lv_item0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>