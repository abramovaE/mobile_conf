<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:id="@+id/scanner_rv"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text0"
        app:layout_constraintBottom_toTopOf="@id/exp_text"
        android:id="@+id/ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ssid"
        android:textSize="@dimen/update_content_lv_item" />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ssid"
        app:layout_constraintEnd_toStartOf="@id/text1"
        app:layout_constraintBottom_toTopOf="@id/exp_text"
        android:id="@+id/text0"
        android:layout_width="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/update_content_lv_item"
        android:gravity="center"
        tools:text="text0" />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text0"
        app:layout_constraintEnd_toStartOf="@id/scanner_lv_item2"
        app:layout_constraintBottom_toTopOf="@id/exp_text"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/update_content_lv_item"
        android:gravity="center"
        tools:text="text1" />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintEnd_toStartOf="@id/exp_btn"
        app:layout_constraintBottom_toTopOf="@id/exp_text"
        android:id="@+id/scanner_lv_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/update_content_lv_item"
        android:gravity="center"
        tools:text="text2"
        android:visibility="gone"/>
    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/scanner_lv_item2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/exp_text"
        android:id="@+id/exp_btn"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="@dimen/update_content_lv_item"
        android:padding="15dp"
        android:visibility="gone" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/ssid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/exp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>