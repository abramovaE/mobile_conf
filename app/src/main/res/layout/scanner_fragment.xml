<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/scanner_label0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="50px"
        android:textAlignment="center"
        android:textSize="@dimen/login_txt"/>

    <TextView
        android:id="@+id/scanner_label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="50px"
        android:textAlignment="center"
        android:textSize="@dimen/login_txt"/>

    <Button
        android:id="@+id/scanner_btn"
        android:text="@string/update_btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="50px"/>

    <TextView
        android:id="@+id/progressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="30px"/>

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/scanner_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="60px"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status_txt"
        android:padding="20px"
        android:gravity="center"
        android:textSize="@dimen/login_txt"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/downloadCoreUpdateFilesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Загрузить с сервера файлы для обновления ядра"
        android:layout_margin="60px"
        />

    <TextView
        android:id="@+id/downloadCoreUpdateFilesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="30px"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/update_content_label"
        android:visibility="gone"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/serial"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_incr"
            android:layout_weight="1"
            android:textAlignment="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/server_incr"
            android:layout_weight="1"
            android:textAlignment="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>

