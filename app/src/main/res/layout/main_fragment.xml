<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MainMenuBlockStyle">
            <TextView
                android:id="@+id/main_tv_scanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scanner"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center|center_vertical"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_basic_scanner_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_basic_scanner_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone" />
            <Button
                android:id="@+id/main_ble_scanner_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_ble_scanner_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MainMenuBlockStyle">
            <TextView
                android:id="@+id/main_tv_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/updating"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center|center_vertical"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_update_os_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_update_os_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_update_stm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_update_stm_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_update_content_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_update_content_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_stm_log_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_stm_log_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MainMenuBlockStyle">
            <TextView
                android:id="@+id/main_tv_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/configuration"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center|center_vertical"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_config_transport_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_config_transport_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_config_station_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_config_station_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MainMenuBlockStyle">
            <TextView
                android:id="@+id/main_tv_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center|center_vertical"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_settings_wifi_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_settings_wifi_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_settings_network_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_settings_network_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_settings_scuart_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_settings_scuart_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_settings_update_php_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_settings_update_php_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
            <Button
                android:id="@+id/main_settings_update_core_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_settings_update_core_btn"
                style="@style/MainMenuBtnStyle"
                android:visibility="gone"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MainMenuBlockStyle">
        <Button
            android:id="@+id/main_settings_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_settings_btn"
            style="@style/MainMenuBtnStyle"
            android:visibility="gone"/>
    </LinearLayout>

    </LinearLayout>
</ScrollView>
